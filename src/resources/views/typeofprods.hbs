<div class="container">
    <div class="row my-2">
        <div class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                data-bs-whatever="@mdo">Thêm loại</button>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm loại sản phẩm</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="FullName">
                                <label for="floatingInput">Tên loại</label>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Thêm</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col justify-content-between">
            <form class="d-flex" role="search">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Loại sản phẩm</option>
                    <option value="1">LSP 1</option>
                    <option value="2">LSP 2</option>
                </select>
                <button type="button" class="btn btn-primary mx-2">Lọc</button>
            </form>
        </div>
    </div>
    <div>
        <table class="table caption-top table-bordered">
            <caption class="fw-semibold">Danh sách Thể loại</caption>
            <thead class="table-dark">
                <tr class="col text-center">
                    <th class="text-center align-middle col" scope="col">#</th>
                    <th class="text-center align-middle col" scope="col-3">Tên thể loại</th>
                    <th class="text-center align-middle col" scope="col">Số lượng SP</th>
                    <th class="text-center align-middle col" scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="text-center align-middle" scope="row">1</th>
                    <td class="text-center align-middle">LSP 1</td>
                    <td class="text-center align-middle">50</td>
                    <td class="text-center align-middle">
                        <button type="button" class="btn btn-primary mx-1 my-1">Sửa</button>
                        <button type="button" class="btn btn-danger mx-1 my-1">Xóa</button>
                    </td>
                </tr>
                <tr>
                    <th class="text-center align-middle" scope="row">2</th>
                    <td class="text-center align-middle">LSP 2</td>
                    <td class="text-center align-middle">50</td>
                    <td class="text-center align-middle">
                        <button type="button" class="btn btn-primary mx-1 my-1">Sửa</button>
                        <button type="button" class="btn btn-danger mx-1 my-1">Xóa</button>
                    </td>
                </tr>
                <tr>
                    <th class="text-center align-middle" scope="row">3</th>
                    <td class="text-center align-middle">LSP 3</td>
                    <td class="text-center align-middle">50</td>
                    <td class="text-center align-middle">
                        <button type="button" class="btn btn-primary mx-1 my-1">Sửa</button>
                        <button type="button" class="btn btn-danger mx-1 my-1">Xóa</button>
                    </td>
                </tr>
                <tr>
                    <th class="text-center align-middle" scope="row">4</th>
                    <td class="text-center align-middle">LSP 4</td>
                    <td class="text-center align-middle">50</td>
                    <td class="text-center align-middle">
                        <button type="button" class="btn btn-primary mx-1 my-1">Sửa</button>
                        <button type="button" class="btn btn-danger mx-1 my-1">Xóa</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>